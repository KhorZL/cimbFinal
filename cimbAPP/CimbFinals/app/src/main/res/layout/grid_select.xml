                android:layout_height="fill_parent"
                android:id="@+id/button4"
                android:src="@drawable/box"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
