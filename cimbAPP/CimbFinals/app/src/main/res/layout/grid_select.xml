<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridSelect">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/verifyheader"
        android:background="@drawable/verifyheader" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="28dp"
        android:id="@+id/verifytext1"
        android:layout_below="@+id/verifyheader"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/verifytext"
        android:layout_below="@+id/verifytext1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        />

    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_below="@+id/verifytext"
        android:layout_height="match_parent"
        app:columnCount="3"
        app:rowCount="3"
        android:padding="5dp"
        android:id="@+id/grid"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageButton
                android:onClick="clicked"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button1"
                android:src="@drawable/box"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageButton
                android:onClick="clicked"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/button2"
